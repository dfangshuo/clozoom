{
    "manifest_version": 2,
    "name": "Clozoom",
    "version": "1.0.0",
    "description": "Close your Zoom meeting tabs automatically!",
    "icons": {},
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["main.js"],
            "run_at": "document_idle"
        }
    ],
    "homepage_url": "https://github.com/thesephist/clozoom",
    "offline_enabled": false,
    "permissions": ["tabs"],
    "short_name": "Clozoom"
}
